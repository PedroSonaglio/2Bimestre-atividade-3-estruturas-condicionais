programa
{
	
	funcao inicio()
	{
	inteiro a
	inteiro b
	inteiro c
		escreva("digite as 3 retas de um triangulo \n")
		leia(a, b, c)

		se (a + b >= c e a + c >= b e c + b >= a){

			se(a == b e b == c ){
				escreva(" esse é um triangulo equilatero")

			}senao se(a != b e b != c e a != c){

				escreva(" esse é um triangulo escaleno")
			}senao{
				escreva(" esse é um triangulo isosceles")
			}
			
		} senao{
			escreva("não é um triangulo")
		}
		
	}
}
